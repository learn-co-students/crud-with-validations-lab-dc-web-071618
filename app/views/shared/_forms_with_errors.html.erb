<% if @song.errors.any? %>
  <div id='error_explanation'>
    <h2>
      <%= pluralize(@song.errors.count, 'error') %>
      prohibited this song from being saved:
    </h2>

    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li>message</li>
      <% end %>
    </ul>
  </div>
<% end %>

<br></br>

<%= form_for @song do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>

  <br></br>

  <%= f.label :artist_name %><br>
  <%= f.text_field :artist_name %><br>

  <br></br>

  <%= f.label :genre %><br>
  <%= f.text_field :genre %><br>

  <br></br>

  <%= f.label :released %><br>
  <%= f.check_box :released %><br>

  <br></br>

  <%= f.label :release_year %><br>
  <%= f.text_field :release_year %><br>

  <br></br>

  <%= f.submit %>
<% end %>
