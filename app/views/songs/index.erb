<h1>All Songs</h1>
<h3><%= link_to 'Add Song', new_song_path %></h3>
<table border="1">
  <tbody>
    <% @songs.each do |song| %>
    <tr>
      <td><%= song.title %></td>
      <td><%= song.genre %></td>
      <td><%= song.artist_name %></td>
      <td><%= song.released %></td>
      <td><%= song.release_year %></td>
      <td><%= link_to 'View', song %> | <%= link_to 'Edit', edit_song_path(song) %> | <%= form_tag song_path(song.id), method: "delete" do %>
        <%= submit_tag "Delete" %>
      <% end %></td>
    </tr>
  <% end %>
  </tbody>
</table>
